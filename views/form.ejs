<%- include("admin.ejs") %>

<section class="bg-white dark:bg-gray-900">
  <div class="max-w-screen-xl px-4 py-8 mx-auto lg:py-16 lg:px-6">
    <div class="max-w-md mx-auto">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Add New Doctor</h2>
      <form action="/form" method="POST" class="space-y-4" enctype="multipart/form-data">
        <div class="flex flex-wrap -mx-2">
          <div class="w-full md:w-1/2 px-2 mb-4 md:mb-0">
            <label for="first_name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">First
              Name</label>
            <input type="text" id="first_name" name="first_name"
              class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md p-2 w-full" required>
          </div>
          <div class="w-full md:w-1/2 px-2">
            <label for="last_name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Last
              Name</label>
            <input type="text" id="last_name" name="last_name"
              class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md p-2 w-full" required>
          </div>
        </div>

        <div class="flex flex-col">
          <label for="specialization"
            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Specialization</label>
          <input type="text" id="specialization" name="specialization"
            class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md p-2" required>
        </div>

        <div class="flex flex-col">
          <label for="contact" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Contact
            Number</label>
          <input type="number" id="contact" name="contact"
            class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md p-2" required>
        </div>
        <div class="flex flex-col">
          <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email</label>
          <input type="email" id="email" name="email"
            class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md p-2" required>
        </div>
        <div class="flex flex-col">
          <label for="instagram" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Upload Photo
            </label>
          <input type="file" id="image" name="image" 
            class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md p-2">
        </div>
        <div class="flex flex-col">
          <label for="instagram" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Instagram
            URL</label>
          <input type="url" id="instagram" name="instagram"
            class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md p-2">
        </div>
        <div class="flex flex-col">
          <label for="facebook" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Facebook
            URL</label>
          <input type="url" id="facebook" name="facebook"
            class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md p-2">
        </div>
        <div class="flex flex-col">
          <label for="twitter" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Twitter
            URL</label>
          <input type="url" id="twitter" name="twitter"
            class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md p-2">
        </div>
        <div class="flex flex-col">
          <label for="linkedin" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">LinkedIn
            URL</label>
          <input type="url" id="linkedin" name="linkedin"
            class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md p-2">
        </div>

        <div class="flex flex-col">
          <label for="gender" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Gender</label>
          <select id="gender" name="gender"
            class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 border-gray-300 rounded-md p-2" required>
            <option value="" disabled selected>--Select Option--</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
          </select>
        </div>
        <div>
          <button type="submit"
            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Add Doctor
          </button>
        </div>
      </form>
    </div>
  </div>
</section>

<%- include("footer.ejs") %>
